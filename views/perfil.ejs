<%- include('./partials/header-logado') %>
  <main>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-2 d-none d-lg-block position-fixed col-lateral">
          <div class="d-block">
            
            <div>
              <ul class="menu-lateral">
                <li class="sessao-menu"><%=usuario.name %></li>  
                <li><a data-toggle="modal" data-target="#compartilharLivroModal">Compartilhar meu livro</a></li>
                <li><a href="listar-meus-livros-para-doacao">Meus livros para doação</a></li>
                <li><a href="listar-meus-livros-para-troca">Meus livros para troca</a></li>                
                <div class="dropdown-divider"></div>    
                <li class="sessao-menu">Comunidade</li>            
                <li><a href="listar-livros-para-doacao">Livros disponíveis para doação</a></li>
                <li><a href="listar-livros-para-troca">Livros disponíveis para troca</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-10 offset-lg-2 mt-4 ">
          <h2 class="mb-1">Editar perfil</h2>
          <a data-toggle="modal" data-target="#exampleModal" id="navbarDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false" href="#">
            <img src="<%= usuario.avatar%>" class="img-fluid mx-auto mb-1" style="width: 100px;" />
          </a>
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Alterar avatar</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form action="/profile" method="POST" enctype="multipart/form-data">
                    <input type="file" name="avatar" />
                    <button type="submit" class="btn btn-primary my-4">Salvar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <form method="post" action="/atualizar">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="nome">Nome</label>
                <input type="text" required class="form-control" id="nome" placeholder="Seu nome" value="David">
              </div>
              <div class="form-group col-md-6">
                <label for="sobrenome">Sobrenome</label>
                <input type="text" required class="form-control" id="sobrenome" placeholder="Seu Sobrenome" value="Lemos">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="email">Email</label>
                <input type="email" required class="form-control" id="email" placeholder="Seu email"value="david@gmail.com">
              </div>
              <div class="form-group col-md-6">
                <label for="password">Password</label>
                <input type="password" required class="form-control" id="password" placeholder="Digite uma nova senha para alterar">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-8">
                <label for="rua">Rua</label>
                <input type="text" required class="form-control" id="rua" placeholder="Rua"  value="Rua qualquer">
              </div>
              <div class="form-group col-md-4">
                <label for="numero">Número</label>
                <input type="number" required class="form-control" id="numero" placeholder="N° da casa"  value="235">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-5">
                <label for="bairro">Bairro</label>
                <input type="text" required class="form-control" id="bairro" placeholder="bairro" placeholder="Nome do bairro"  value="Centro">
              </div>            
              <div class="form-group col-md-5">
                <label for="cidade">Cidade</label>
                <input type="text" required class="form-control" id="cidade" placeholder="Nome da cidade"  value="São Paulo">
              </div>
              <div class="form-group col-md-2">
                <label for="estado">Estado</label>
                <input type="text" required class="form-control" id="estado" placeholder="Nome do estado"  value="SP">
              </div>
             
            </div>            
            <button type="submit" class="btn btn-primary my-4">Salvar</button>

            
          </form>
          
        </div>
      </div>
    </div>

    </section>
  </main>

  <div class="modal fade" id="compartilharLivroModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">    
          <h5>Cadastrar livro</h5>      
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="cadastro-livro">
            <form>
              <div class="row">
                <div class="col-12 col-lg-6">
                  <img src="images/icons/book.png" class="rounded  mr-auto d-block img-fluid mb-3" width="100" alt="Capa livro">
                  <div class="form-group">
                    <label for="nomeLivro">Nome do livro</label>
                    <input type="text" class="form-control" id="nomeLivro" placeholder="Nome do livro">
                  </div>
                  <div class="form-group">
                    <label for="autor">Autor</label>
                    <input type="text" class="form-control" id="autor" placeholder="Autor">
                  </div>
                  <div class="form-group">
                    <label for="acao">O que deseja fazer?</label>
                    <select id="acao" class="form-control">
                      <option selected>O que deseja fazer?</option>
                      <option>Doar</option>
                      <option>Emprestar</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="localTroca">Local de encontro para troca</label>
                    <input type="text" class="form-control" id="localTroca" placeholder="Local de encontro para troca">
                  </div>
                </div>
                <div class="col-12 col-lg-6">
                  <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3657.164465543781!2d-46.657037035543055!3d-23.562535967519576!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1spt-PT!2sus!4v1586352420780!5m2!1spt-PT!2sus" width="100%" height="320" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>
                <div class="col-12">
                  <input class="btn btn-primary px-3 my-2" type="submit" value="Cadastrar livro">
                </div>
              </div>
              
              
            </form>
          </div>
        </div>        
      </div>
    </div>
  </div>
  

  <footer class="footer">

  </footer>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="bootstrap/js/bootstrap.min.js"></script>
  
</body>
</html>